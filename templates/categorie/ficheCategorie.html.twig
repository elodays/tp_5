{% extends 'base.html.twig' %}

{% block title %}Fiche Categorie{% endblock %}

{% block body %}
<h1 class="text-center pt-2">Fiche Categorie</h1>
<div class="row">
<div class="card mb-3 container">
<h4 clas="card-header"> {{laCategorie.libelle}}</h4>
<div class="row">
<div class="col-2 d-fle align-items-center">
          <img style="width: 250px; height: 200px; margin: auto;" src="{{ laCategorie.image }}" alt="image"> </div>
          <div class="col">
          <ul class="list-group list-group-flush"> <hr>
